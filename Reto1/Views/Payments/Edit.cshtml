@model Reto1.Models.PaymentFormVm

@{
    ViewData["Title"] = "Edit payment";
}

<h2>Edit payment</h2>

<div style="margin:10px 0;">
    <a asp-action="Index">← Back</a>
</div>

@if (!ViewData.ModelState.IsValid)
{
    <div style="padding:10px; border:1px solid #ddd; margin:10px 0;">
        @Html.ValidationSummary(true)
    </div>
}

<form asp-action="Edit" asp-route-id="@ViewBag.PaymentId" method="post">
    @Html.AntiForgeryToken()

    <div style="margin-bottom:10px;">
        <label asp-for="PaidOn"></label><br />
        <input asp-for="PaidOn" type="date" />
        <div><span asp-validation-for="PaidOn"></span></div>
    </div>

    <div style="margin-bottom:10px;">
        <label asp-for="Amount"></label><br />
        <input asp-for="Amount" />
        <div><span asp-validation-for="Amount"></span></div>
    </div>

    <div style="margin-bottom:10px;">
        <label asp-for="Merchant"></label><br />
        <input asp-for="Merchant" />
        <div><span asp-validation-for="Merchant"></span></div>
    </div>

    <div style="margin-bottom:10px;">
        <label asp-for="Category"></label><br />
        <input asp-for="Category" />
        <div><span asp-validation-for="Category"></span></div>
    </div>

    <div style="margin-bottom:10px;">
        <label asp-for="Notes"></label><br />
        <textarea asp-for="Notes" rows="3"></textarea>
        <div><span asp-validation-for="Notes"></span></div>
    </div>

    <button type="submit">Save changes</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
